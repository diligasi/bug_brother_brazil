<% if Camera.count != 0 %>
	<% if session[:id_camera] == nil %>
		<% session[:id_camera] = 1 %>
	<% end %>
	<% @current_camera = Camera.find(session[:id_camera]) %>
	<div class="slider-wrapper" id="camPanel">
		<h4><%= @current_camera.name %></h4>
		<%= @current_camera.address.html_safe %>
		<p class="description">
			<b>Description:</b><br />
			<%= @current_camera.description %>
		</p>
	</div>
<% else %>
	<div class="slider-wrapper" id="camPanel">
		<h4>No registered camera</h4>
		<div style="background: #FFFFFF; border-radius: 5px; filter:Alpha(opacity=50); /* IE8 and earlier */ float: left; height: 400px; line-height: 26em; margin: 0 5px 0 5px; opacity: 0.5; text-align: center; width: 770px;">
			<h5>No camera to show.</h5>
		</div>
		<p class="description">
			<b>Description:</b><br />
			No description.
		</p>
	</div>
<% end %>