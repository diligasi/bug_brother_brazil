<!DOCTYPE html>
<html>
	<head>
		<title>Bug Brother Brazil</title>
		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<script language="javascript" type="text/javascript">
			function countChar(val, max) {
		        var len = val.value.length;
		        if (len === max) {
		        	$('#charNum').text(0);
		        } else if (len < max) {
		        	$('#charNum').text(max - len);
		        } else {
		        	val.value = val.value.substring(0, max);
		        }
		      };
		</script>
	</head>
	<body>
		<div class="main-bg">
			<div class="bg">
				<!--==============================header=================================-->
				<header>
					<div class="main">
						<div class="wrapper">
							<h1><%= link_to 'Bug Brother Brazil', root_path %></h1>
						</div>
						<div class="login">
							<%= render 'home/login' %>
						</div>
						<nav>
							<%= render 'home/menu' %>
						</nav>
						<% if current_page?('/') %>
							<%= render 'home/camera_panel' %>
						<% end %>
					</div>
				</header>
				<!--==============================content================================-->
				<section id="content"><div class="ic"></div>
					<div class="main">
						<div class="container_12">
							<div class="container-bot">
								<div class="container-top">
									<div class="container">
										<div class="wrapper">
											<p class="notice"><%= notice %></p>
											<p class="alert"><%= alert %></p>
											<%= yield %>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
				<!--==============================footer=================================-->
				<footer>
		        <div class="main">
		            <sub>Hosted by <%= link_to 'Heroku', 'https://www.heroku.com/', :target => '_blanck', :style => 'color: #666;' %> | Technology Ruby on Rails<br />Developed by Diogo de Lima<br />
		            <span>Bug Brother Brazil &copy; 2013</span></sub>
		        </div>
				</footer>
			</div>
		</div>
		<script type="text/javascript"> Cufon.now(); </script
	</body>
</html>
