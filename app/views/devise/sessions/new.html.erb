<style type="text/css">
	label.text-form {
		width: 60px !important;
	}
	div.remember {
		padding: 0 0 0 58px;
	}
</style>

<article class="grid_8">
  <div class="indent-left">
    <h3 class="p1">Login</h3>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset>
		<%= f.label :email, :class => 'text-form' %>
		<%= f.email_field :email, :autofocus => true %><br />

		<%= f.label :password, :class => 'text-form' %>
		<%= f.password_field :password %><br />

		<% if devise_mapping.rememberable? -%>
		<div class="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		<% end -%>

  		<div class="buttons" style="padding: 15px 319px 10px 0;">
  			<%= f.submit "Login", :class => 'button', :style => 'width: 90px;' %>
        </div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</article>