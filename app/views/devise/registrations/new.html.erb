<article class="grid_8">
  <div class="indent-left">
    <h3 class="p1">Register</h3>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <%= f.label :username, :class => 'text-form' %>
        <%= f.text_field :username, :autofocus => true %><br />

        <%= f.label :email, :class => 'text-form' %>
        <%= f.email_field :email %><br />

        <%= f.label :password, :class => 'text-form' %>
        <%= f.password_field :password %><br />

        <%= f.label :password_confirmation, :class => 'text-form' %>
        <%= f.password_field :password_confirmation %><br />

        <div class="buttons" style="padding: 20px 240px 0 0;">
          <%= f.submit "Register", :class => 'button', :style => 'width: 90px;' %>
        </div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</article>
