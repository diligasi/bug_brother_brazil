<style type="text/css">
	var.hide {
		display: none;
	}
</style>

<article class="grid_8">
	<div class="indent-left">
	    <h3 class="p1">Forgot your password?</h3>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      		<fieldset>
		  		<%= devise_error_messages! %>

				<%= f.label :email, :class => 'text-form', :style => 'width: 40px;' %>
				<%= f.email_field :email, :autofocus => true, :style => 'width: 230px;' %><br />

				<div class="buttons" style="padding: 15px 315px 10px 0;">
  					<%= f.submit "Send me instructions", :class => 'button', :style => 'width: 160px;' %>
  				</div>
			</fieldset>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</article>